          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/Finance/transaction": {
      "post": {
        "tags": [
          "Finance"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/FinancialTransactionViewModel"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/FinancialTransactionViewModel"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/FinancialTransactionViewModel"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
